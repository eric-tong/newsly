<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/vie_card_article_hero_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:riv_corner_radius_top_left="8dp"
        app:riv_corner_radius_top_right="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vie_card_article_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/vie_card_article_tag_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/bkg_screen_top_rounded"
        android:fontFamily="serif"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintTop_toTopOf="@+id/vie_card_article_hero_iv" />

    <TextView
        android:id="@+id/vie_card_article_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_screen_bottom"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:gravity="center_vertical|start"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="4"
        android:padding="16dp"
        android:paddingEnd="40dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_hero_iv" />

    <TextView
        android:id="@+id/vie_card_article_domain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/vie_card_article_date_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vie_card_article_guideline"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/vie_card_article_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="today"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_domain_tv"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_domain_tv"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/vie_card_article_flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_border_rectangle_attention"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:rotation="10"
        android:textColor="@color/md_amber_500"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_hero_iv" />

</android.support.constraint.ConstraintLayout>