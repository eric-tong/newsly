<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/vie_card_article_hero_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:riv_corner_radius_top_left="8dp"
        app:riv_corner_radius_top_right="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/vie_card_article_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/vie_card_article_flair_bkg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bkg_screen_top_rounded"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/vie_card_article_tag_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintTop_toTopOf="@+id/vie_card_article_hero_iv" />

    <TextView
        android:id="@+id/vie_card_article_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="0.8"
        android:fontFamily="serif"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintTop_toTopOf="@+id/vie_card_article_hero_iv" />

    <ImageView
        android:id="@+id/vie_card_article_headline_bkg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bkg_screen_bottom"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/vie_card_article_headline_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_headline_tv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_headline_tv"
        app:layout_constraintTop_toTopOf="@+id/vie_card_article_headline_tv" />

    <TextView
        android:id="@+id/vie_card_article_headline_tv"
        style="@style/text_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintRight_toRightOf="@+id/vie_card_article_hero_iv" />

    <TextView
        android:id="@+id/vie_card_article_domain_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/vie_card_article_time_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vie_card_article_flag_tv"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_hero_iv"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/vie_card_article_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_domain_tv"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_domain_tv"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/vie_card_article_flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_border_rectangle_attention"
        android:fontFamily="sans-serif-smallcaps"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:textColor="@color/md_amber_500"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@+id/vie_card_article_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vie_card_article_hero_iv" />

</android.support.constraint.ConstraintLayout>